{
    // Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }

    "Markdown Table": {
        "prefix": "t",
        "body": [
            "| Tables        | Are           | Cool  |",
            "| ------------- |:-------------:| -----:|",
            "| col 3 is      | right-aligned | 21600 |",
            "| col 2 is      | centered      |    12 |",
            "| zebra stripes | are neat      |     1 |"
        ],
        "description": "A new markdown table"
    },
    "Travis badge": {
        "prefix": "tb",
        "body": "[![Build Status](https://travis-ci.org/ngeor/$1.svg?branch=master)](https://travis-ci.org/ngeor/$1)",
        "description": "Inserts a Travis badge"
    },
    "PyPI badge": {
        "prefix": "pb",
        "body": "[![PyPI](https://img.shields.io/pypi/v/$1.svg)](https://pypi.org/project/$1/)",
        "description": "Inserts a PyPI badge"
    },
    "all npm badges": {
        "prefix": "anb",
        "body": [
            "[![Build Status](https://travis-ci.org/ngeor/${1:repo-name}.svg?branch=master)](https://travis-ci.org/ngeor/${1:repo-name})",
            "[![npm (scoped)](https://img.shields.io/npm/v/@ngeor/${1:repo-name}.svg)](https://www.npmjs.com/package/@ngeor/${1:repo-name})",
            "[![Coverage Status](https://coveralls.io/repos/github/ngeor/${1:repo-name}/badge.svg)](https://coveralls.io/github/ngeor/${1:repo-name})",
            "[![Dependencies](https://david-dm.org/ngeor/${1:repo-name}.svg)](https://david-dm.org/ngeor/${1:repo-name})",
            "[![devDependencies Status](https://david-dm.org/ngeor/${1:repo-name}/dev-status.svg)](https://david-dm.org/ngeor/${1:repo-name}?type=dev)"
        ]
    }
}
