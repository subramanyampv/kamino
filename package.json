{
  "name": "clone-all",
  "version": "5.2.0",
  "description": "Clones all public git repositories",
  "main": "clone-all.js",
  "scripts": {
    "test": "npm-run-all eslint mocha nyc",
    "clean": "rimraf coverage",
    "eslint": "eslint .",
    "mocha": "mocha --recursive",
    "nyc": "nyc npm run mocha",
    "coveralls": "nyc mocha && nyc report --reporter=text-lcov | coveralls",
    "jsdoc": "jsdoc -r -c ./jsdoc.json -d jsdoc ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngeor/clone-all.git"
  },
  "author": "Nikolaos Georgiou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngeor/clone-all/issues"
  },
  "homepage": "https://github.com/ngeor/clone-all#readme",
  "dependencies": {
    "chalk": "^2.3.0",
    "commander": "^2.13.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-ngeor": "^0.2.0",
    "jsdoc": "^3.5.5",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.0",
    "sinon-chai": "^2.14.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "eslintIgnore": [
    "coverage/"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 95,
    "statements": 95,
    "functions": 93,
    "branches": 94,
    "include": [
      "index.js",
      "lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "all": true
  }
}
