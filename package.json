{
  "name": "@ngeor/dirloop",
  "version": "0.0.6",
  "description": "CLI utility that runs a command on multiple directories",
  "main": "src/index.js",
  "scripts": {
    "test": "npm-run-all eslint",
    "clean": "rimraf coverage",
    "eslint": "eslint .",
    "mocha": "mocha src/*.test.js src/**/*test.js",
    "nyc": "nyc npm run mocha",
    "coveralls": "npm run nyc && nyc report --reporter=text-lcov | coveralls",
    "jsdoc": "jsdoc -r -c ./jsdoc.json -d jsdoc .",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngeor/dirloop.git"
  },
  "bugs": {
    "url": "https://github.com/ngeor/dirloop/issues"
  },
  "homepage": "https://github.com/ngeor/dirloop#readme",
  "author": "Nikolaos Georgiou",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "coverage/"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@ngeor/js-cli-logger": "^0.2.0",
    "commander": "^2.19.0"
  },
  "bin": "src/index.js",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.11.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0"
  }
}
