{
  "name": "@ngeor/clone-all",
  "version": "6.0.0",
  "description": "Clones all public git repositories",
  "main": "lib/main.js",
  "bin": "lib/main.js",
  "scripts": {
    "pretest": "eslint .",
    "test": "nyc mocha lib/*.test.js lib/**/*test.js",
    "clean": "rimraf coverage",
    "eslint": "eslint .",
    "mocha": "mocha lib/*.test.js lib/**/*test.js",
    "nyc": "nyc mocha lib/*.test.js lib/**/*test.js",
    "coveralls": "npm run nyc && nyc report --reporter=text-lcov | coveralls",
    "jsdoc": "jsdoc -r -c ./jsdoc.json -d jsdoc ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngeor/clone-all.git"
  },
  "author": "Nikolaos Georgiou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngeor/clone-all/issues"
  },
  "homepage": "https://github.com/ngeor/clone-all#readme",
  "dependencies": {
    "@ngeor/js-cli-logger": "^0.2.0",
    "commander": "^2.20.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "jsdoc": "^3.6.3",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  },
  "engines": {
    "node": ">=10.14.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "coverage/"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 99,
    "statements": 99,
    "functions": 96,
    "branches": 98,
    "include": [
      "index.js",
      "lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "all": true
  }
}
