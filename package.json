{
  "name": "@ngeor/dirloop",
  "version": "0.7.1",
  "description": "CLI utility that runs a command on multiple directories",
  "main": "src/index.js",
  "scripts": {
    "pretest": "eslint .",
    "test": "nyc mocha src/*.test.js src/**/*test.js",
    "clean": "rimraf coverage",
    "eslint": "eslint .",
    "mocha": "mocha src/*.test.js src/**/*test.js",
    "nyc": "nyc mocha src/*.test.js src/**/*test.js",
    "coveralls": "npm run nyc && nyc report --reporter=text-lcov | coveralls",
    "jsdoc": "jsdoc -r -c ./jsdoc.json -d jsdoc .",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngeor/dirloop.git"
  },
  "bugs": {
    "url": "https://github.com/ngeor/dirloop/issues"
  },
  "homepage": "https://github.com/ngeor/dirloop#readme",
  "author": "Nikolaos Georgiou",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "coverage/"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "dependencies": {
    "@ngeor/js-cli-logger": "^0.2.0",
    "commander": "^2.20.0",
    "lodash": "^4.17.14"
  },
  "bin": "src/index.js",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "jsdoc": "^3.6.2",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  }
}
